<% include ../partials/header %>


    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Let's Go Camping!</h1>
            <p>Looking for a new destination to become one with nature?</p>
            <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
            </p> 
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card">
                    <img src="<%=campground.image%>" class="card-img-top" alt="Campground Image">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">View More Information</a>
                    </div>
                </div>

             </div>
        <% }); %>
    </div>




<% include ../partials/footer %>